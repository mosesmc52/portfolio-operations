SHELL=/bin/bash
PATH=/usr/local/bin:/usr/bin:/bin

*/2 * * * * root bash -lc 'set -euo pipefail; echo "[cron] $(date) whoami=$(whoami) pwd=$(pwd)"; env | sort | egrep "DJANGO|DATABASE|SQLITE|ENV|PATH|TZ" || true; flock -w 10 /tmp/operations_db.lock /app/scripts/manage_wrapper.sh healthcheck; echo "[cron] rc=$? $(date)"' >> /proc/1/fd/1 2>> /proc/1/fd/2
#*/1 * * * * root flock -w 10 /tmp/operations_db.lock /app/scripts/manage_wrapper.sh healthcheck >> /proc/1/fd/1 2>> /proc/1/fd/2
